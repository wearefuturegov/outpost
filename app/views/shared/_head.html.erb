<head>
    <title>
        <%= yield :title %> <%= Setting.outpost_title %> | <%= Setting.outpost_sub_title %>
    </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag 'favicon.ico' %>
    <meta http-equiv="X-UA-Compatible" content="IE=10">
    <meta name="viewport" content="width=device-width, initial-scale=1">
