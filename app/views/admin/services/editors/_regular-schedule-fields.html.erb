<div class="field-section field-section--three-cols field-section--no-bottom-margin">
    <div class="field">
        <%= sched.label :weekday, "Day", class: "field__label" %>
        <%= sched.select :weekday, weekdays.collect {|d| [ d[:label], d[:value] ] }, {}, class: "field__input"  %>
    </div>
    <div class="field field--required">
        <%= sched.label :opens_at, class: "field__label" %>
        <%= sched.time_field :opens_at, value: sched.object.opens_at&.strftime("%H:%M"), class: "field__input", step: 60, required: true %>
    </div>
    <div class="field field--required">
        <%= sched.label :closes_at, class: "field__label" %>
        <%= sched.time_field :closes_at, value: sched.object.closes_at&.strftime("%H:%M"), class: "field__input", step: 60, required: true %>
    </div>
</div>

<%= sched.hidden_field :_destroy,  data: {destroy_field: true} %>

<button type="button" class="nested-editor__closer" data-close="true">Remove this schedule</button>
