<% content_for :title do %>Services | <% end %>

<% content_for :header do %>
    <h1 class="page-header__title">Services</h1>
    <%= render "shared/services-nav" %>
<% end %>

<%= render "filters" %>

<% if @services.present? %>
  <div class="table-holder">
    <%= render partial: 'list', locals: { services: @services } %>
  </div>
  <%= paginate @services %>
<% else %>
  <p class="no-results no-results--big">No results to show</p>
<% end %>