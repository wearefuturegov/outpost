<nav class="shortcuts">
    
    <%= render partial: "shared/shortcuts_item", 
    locals: {
        state: current_page?(controller: 'admin/ofsted', action: 'index') && !params[:archived].present?, 
        link: admin_ofsted_index_path,
        count: @ofsted_counts.dig(:all, :feed),
        label: "All"
    } %>
<span class="shortcuts__divider">|</span>
    
    <%= render partial: "shared/shortcuts_item", 
    locals: {
        state: current_page?(controller: 'admin/ofsted', action: 'pending') , 
        link: pending_admin_ofsted_index_path,
        count: @ofsted_counts.dig(:all, :pending),
        label: "Pending"
    } %>

<span class="shortcuts__divider">|</span>
    <%= render partial: "shared/shortcuts_item", 
    locals: {
        state: params[:archived] === "true", 
        link: admin_ofsted_index_path(:archived => true),
        count: @ofsted_counts.dig(:all, :archived),
        label: "Archived"
    } %>



</nav>
