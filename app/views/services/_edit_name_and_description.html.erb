<% content_for :title do %>Name and description | <% end %>

<% content_for :header do %>
    <%= link_to "Go back", service_path(@service), class: "go-back" %>
    <h1 class="page-header__title two-thirds">Name and description</h1>
<% end %>

<%= form_with model: @service, url: service_path(@service, :section => params[:section]), html: {class: "two-thirds"} do |s| %>
    <%= render "shared/errors", model: @service %>
    <div class="field field--required">
        <%= s.label :name, "What is your service or activity called?", class: "field__label field__label--bold" %>
        <p class="field__hint">Weâ€™ll use this name to list it on the public service directory. The best names are short but specific.</p>
        <%= s.text_field :name, class: "field__input one-half", required: true %>
    </div>

    <div class="field field--required field--span-two-cols" data-word-count="true">
        <%= s.label :description, "Describe your service", class: "field__label field__label--bold" %>
        <p class="field__hint">In a few sentences, explain what your service does and who it helps.</p>
        <%= s.text_area :description, class: "field__input wysiwyg-simple", rows: 5, required: true %>
    </div>

    <button class="button">Continue</button>
<% end %>